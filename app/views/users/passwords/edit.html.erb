<div class="sign-in-form">
  <div class="row-fluid">
    <div class="span8 offset2 centered">
      <h1>Change Your Password</h1>
      <h3>Please enter a new password for your account.</h3>
    </div>
  </div>

  <div class="row-fluid">
    <div class="centered">
      <div class="auth-form">
        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, :class=>'forgot_password') do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-inputs" style="width: 600px;margin: 0 auto;">
            <%= f.input :password, required: true, required: true, wrapper: :prepend, error: false do %>
              <span class="add-on"><i class="icon-envelope"></i></span>
              <%= f.input_field :password, placeholder: "Password" %>
            <% end %>

            <%= f.input :password_confirmation, required: true, required: true, wrapper: :prepend, error: false do %>
              <span class="add-on"><i class="icon-envelope"></i></span>
              <%= f.input_field :password_confirmation, placeholder: "Password Confirmation" %>
            <% end %>

          <div><%= f.submit "Change my password", :class => "btn forgot" %></div>
           <% end %>
        </div>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

