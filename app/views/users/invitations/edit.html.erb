<div class="sign-in-form">
  <div class="row-fluid">
    <div class="span8 offset2 centered">
      <h1>Welcome, John</h1>
      <h3>Please change your password to get secure access</h3>
    </div>
  </div>

  <div class="row-fluid">
    <div class="centered">
      <div class="auth-form">
        <%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :invitation_token %>
            <%= f.input :password, required: true, wrapper: :prepend, error: true do %>
              <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.input_field :password, placeholder: "Password" %>
            <% end %>

            <%= f.input :password_confirmation, required: true, wrapper: :prepend, error: true do %>
              <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.input_field :password_confirmation, placeholder: "Password Confirmation" %>
            <% end %>

          <%= f.submit t("devise.invitations.edit.submit_button"), :class => 'btn small' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
