<div class="sign-in-form">
  <div class="row-fluid">
    <div class="span8 offset2 centered">
      <h1>You Are Almost There</h1>
      <h3>Please set a password to get secure access</h3>
    </div>
  </div>

  <div class="row-fluid">
    <div class="centered">
      <div class="auth-form" style="width: 283px;margin: 0 auto;">
        <%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
          <%#= devise_error_messages! %>
            <%= f.hidden_field :invitation_token %>
            <%= f.input :password, required: true, wrapper: :prepend, error: true do %>
              <span class="add-on"><i class="icon-lock"></i></span>
              <%= f.input_field :password, placeholder: "Password" %>
            <% end %>

            <%= f.input :password_confirmation, required: true, wrapper: :prepend, error: true do %>
              <span class="add-on"><i class="icon-lock"></i></span>
              <%= f.input_field :password_confirmation, placeholder: "Password Confirmation" %>
            <% end %>

            <%= f.input :secret_code, required: true, wrapper: :prepend, error: true do %>
              <span class="add-on"><i class="icon-pencil"></i></span>
              <%= f.input_field :secret_code, placeholder: "Secret Code", :value => ''%>
            <% end %>

            <%= f.input :terms_of_service, required: true, as: :boolean, checked_value: true, unchecked_value: false do %>
              <span class="label-tos">
                <a href="http://www.advisorfeed.com/about-advisorfeed/terms-of-service/" target="_blank">
                  Terms of Service
                </a>
              </span>
              <%= f.input_field :terms_of_service, as: :boolean, checked: true %>
            <% end %>
            <%= f.hidden_field :enable_validation, value: true %>
          <%= f.submit "Set My Password", :class => 'btn small' %>
          <p class="acceptance-text">By creating a password, you are
accepting the terms of this portal</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
