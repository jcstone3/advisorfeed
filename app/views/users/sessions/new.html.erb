<div class="sign-in-form">
  <div class="row-fluid">
    <div class="span8 offset2 centered">
      <h1>Sign In</h1>
      <h3></h3>
    </div>
  </div>

  <div class="row-fluid">
    <div class="centered">
      <div class="auth-form">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <%= bootstrap_flash %>
        <div class="form-inputs">
            <%= f.input :email, required: true, required: true, wrapper: :prepend, error: true do %>
              <span class="add-on"><i class="icon-envelope"></i></span>
            <%= f.input_field :email, placeholder: "Email" %>
            <% end %>
            <%= f.input :password, required: true, wrapper: :prepend, error: true do %>
              <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.input_field :password, placeholder: "Password" %>
            <% end %>

            <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        </div>

        <%= f.button :submit, "Sign In" %>
        <% end %>
      </div>
         <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>



