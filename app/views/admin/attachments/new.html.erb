<div class="sign-in-form">
  <div class="row-fluid">
    <div class="span8 offset2 centered">
      <h1>Upload a new report</h1>
    </div>
  </div>

  <div class="row-fluid">
    <div class="centered">
      <div class="auth-form">
        <%= simple_form_for(@attachment, :url => admin_user_attachments_path, :html => { :multipart => true, :method => :post } ) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :file_name, :required => true, wrapper: :prepend, :autofocus => true, placeholder: "Report Name" do %>
              <span class="add-on"><i class="icon-file"></i></span>
            <%= f.input_field :file_name, placeholder: "Report Name" %>
            <% end %>

            <%= f.input :file_note, :required => true, wrapper: :prepend, :autofocus => true, placeholder: "Report Descripton" do %>
              <span class="add-on"><i class="icon-file-text"></i></span>
            <%= f.input_field :file_note, placeholder: "Report Descripton" %>
            <% end %>

            <%#= link_to "<i class='icon-cloud-upload'></i> Upload Report".html_safe, new_admin_user_path,  { :class=>"action-btn-left upload-report" } %>
            <%= f.file_field :avatar, :required => true, placeholder: "Avatar" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Save report" %>
          </div>
        <% end %>
