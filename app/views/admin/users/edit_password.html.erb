<div class="sign-in-form client-add-edit">
  <div class="row-fluid">
    <div class="span12 centered">
      <h1>Update Password - <%= @user.first_name %> <%= @user.last_name %></h1>
      <h3>Please enter a new password</h3>
    </div>
  </div>

  <div class="row-fluid">
    <div class="centered">
      <div class="auth-form">
        <%= simple_form_for(@user, :url => admin_user_update_password_path, :html => { :method => :PUT } ) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs" style="width: 282px;margin: 0 auto;margin-top: 0px;">
            <%= f.input :password, required: true, required: true, wrapper: :prepend do %>
              <span class="add-on"><i class="icon-lock"></i></span>
              <%= f.input_field :password, placeholder: "Password" %>
            <% end %>
            <%= f.input :password_confirmation, required: true, required: true, wrapper: :prepend do %>
              <span class="add-on"><i class="icon-lock"></i></span>
              <%= f.input_field :password_confirmation, placeholder: "Password Confirmation" %>
            <% end %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Update Password" %>
            <%= link_to 'Cancel', admin_users_path, :class => "secondary-links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
