<h2>Edit <%= @user.first_name %> <%= @user.last_name %> password</h2>

<%= simple_form_for(@user, :url => admin_user_update_password_path, :html => { :method => :PUT } ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :password, :label => "New password", :required => true, :autofocus => true, placeholder: "Password" %>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true, placeholder: "Confirm password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update password" %>
    <%= link_to 'Cancel', admin_users_path, :class => "secondary-links" %>
  </div>
<% end %>
