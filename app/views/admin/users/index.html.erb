<div class="container-fluid breadbar">
  <div class="row-fluid">
    <div class="span8">
      <h2>Clients</h2>
    </div>
    <div class="span4">
      <%= link_to "<i class='icon-plus'></i> Add User".html_safe, new_admin_user_path,  { :class=>"action-btn" } %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <table class="table client-table">
    <thead>
      <tr>
        <th>Clients</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody class="table-items">
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %><%= user.last_name %></td>
        <td>
          <div class="icons">
            <%= link_to "<i data-toggle='tooltip' title='Send Report' class='icon-cloud-upload'></i> Send Report".html_safe, new_admin_user_attachments_path(:user_id => user.id),  { :class=>"btn action-upload" } %></span>
            <a href="" class="btn action-report"><i data-toggle="tooltip" title="View Reports" class="icon-bar-chart"></i> View Reports</a>

            <%= link_to("<i title='Invite User' class='icon-envelope'></i> Invite User".html_safe, admin_invitation_path(:id => user.id), method: :post, :class => "btn") %>
          </div>

          <div class="user-actions">
            <span class=""><%= link_to("<i class='icon-remove'></i>".html_safe, admin_user_path(:id => user.id), method: :delete ) %></span>
            <span class=""><%= link_to("<i class='icon-edit'></i>".html_safe, edit_admin_user_path(:id => user.id)) %></span>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
