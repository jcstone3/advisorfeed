<div class="container-fluid breadbar">
  <div class="row-fluid">
    <div class="span8">
      <h2>Clients</h2>
    </div>
    <div class="span4">
      <%= link_to "<i class='icon-plus'></i> Add User".html_safe, new_admin_user_path,  { :class=>"action-btn" } %>
    </div>
  </div>
</div>

<div class="container-fluid">
  <% @users.in_groups_of(2).each do |user_group| %>
    <div class="row-fluid">
      <div class="span12">
        <% user_group.each do |user| %>
          <% break if user.nil? %>
          <div class="span6">
              <div class="row-fluid client-cards">
                <div class="span12">
                  <div class="row-fluid">
                    <h2><%= user.first_name %><%= user.last_name %>
                        <span class=""><%= link_to("<i class='icon-remove'></i>".html_safe, admin_user_path(:id => user.id), method: :delete ) %></span>
                        <span class=""><%= link_to("<i class='icon-edit'></i>".html_safe, edit_admin_user_path(:id => user.id)) %></span>
                    </h2>
                  </div>
                  <div class="row-fluid">
                    <div class="span12">
                      <p><%= user.description %></p>
                    </div>
                  </div>
                  <div class="row-fluid client-operations">
                    <!-- <a href="" class="btn">UPLOAD REPORT</a> -->
                    <div class="icons">
                      <span class=""><%= link_to "<i data-toggle='tooltip' title='Send Report' class='icon-cloud-upload'></i>".html_safe, new_admin_user_attachments_path(:user_id => user.id) %></span>
                      <span>
                        <a href="" class=""><i data-toggle="tooltip" title="View Reports" class="icon-bar-chart"></i></a>
                      </span>
                      <span class=""><%= link_to("<i title='Invite User' class='icon-envelope'></i>".html_safe, admin_invitation_path(:id => user.id), method: :post ) %></span>

                    </div>
                  </div>
                </div>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
