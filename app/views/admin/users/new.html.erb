<div class="sign-in-form client-add-edit">
  <div class="row-fluid">
    <div class="span12 centered">
      <h1>Add A New Client</h1>
      <h3>Please fill in the details to add a new client</h3>
    </div>
  </div>

  <div class="row-fluid">
    <div class="centered">
      <div class="auth-form">
        <%= simple_form_for(@user, :url => admin_users_path, :html => { :method => :post } ) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs" style="width: 600px;margin: 0 auto;">
            <div class="row-fluid">
              <div class="span12">
                <div class="span6">
                  <%= f.input :first_name, :required => true, wrapper: :prepend, :autofocus => true, placeholder: "First Name" do %>
                    <span class="add-on"><i class="icon-user"></i></span>
                  <%= f.input_field :first_name, placeholder: "First Name" %>
                  <% end %>
                </div>
                <div class="span6">
                  <%= f.input :last_name, :required => true, wrapper: :prepend, :autofocus => true   do %>
                    <span class="add-on"><i class="icon-user"></i></span>
                  <%= f.input_field :last_name, placeholder: "Last Name" %>
                  <% end %>
                </div>
              </div>
            </div>


            <div class="row-fluid">
              <div class="span12">
                <div class="span6 text-field">
                  <%= f.input :website, :required => true, wrapper: :prepend, :autofocus => true, placeholder: "Website", class: "lol" do %>
                    <span class="add-on"><i class="icon-globe"></i></span>
                  <%= f.input_field :website, placeholder: "Website"%>
                  <% end %>
                </div>
                <div class="span6 text-field">
                  <%= f.input :company, :required => true, wrapper: :prepend, :autofocus => true   do %>
                    <span class="add-on"><i class="icon-building"></i></span>
                  <%= f.input_field :company, placeholder: "Company"%>
                  <% end %>
                </div>
              </div>
            </div>


            <div class="row-fluid">
              <div class="span12">
                <div class="span7">
                  <%= f.input :email, :required => true, wrapper: :prepend, :autofocus => true   do %>
                    <span class="add-on"><i class="icon-envelope"></i></span>
                  <%= f.input_field :email, placeholder: "Email" %>
                  <% end %>
                </div>
                <div class="span5">
                  <%= f.input :phone, :required => true, wrapper: :prepend, :autofocus => true   do %>
                    <span class="add-on"><i class="icon-phone"></i></span>
                  <%= f.input_field :phone, placeholder: "Phone Number" %>
                  <% end %>
                </div>
              </div>
            </div>


            <div class="row-fluid">
              <div class="span12">
                <div class="span6 text-field">
                  <%= f.input :address, :required => true, wrapper: :prepend, :autofocus => true, placeholder: "Address", class: "lol" do %>
                    <span class="add-on"><i class="icon-home"></i></span>
                  <%= f.input_field :address, placeholder: "Address", as: :text %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Create Client" %>
            <%= link_to 'Cancel', admin_users_path, :class => "secondary-links" %>
            <a href="" class="secondary-links reset">Reset</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

